import java.util.Arrays;
import java.util.Scanner;
public class NthLargestAndMthSmallest {
    public static void main(String[] args) {
        Scanner input=new Scanner(System.in);
        int[] array = {1,3,5,6,8,9,4,7};
        System.out.println("enter te number:");
        int n=input.nextInt();
        int m=input.nextInt();
        Arrays.sort(array);
        int nthLargest = array[array.length - n];
        int mthSmallest = array[m -1];
        System.out.println(n + "th largest number is: " + nthLargest);
        System.out.println(m + "th smallest number is: " + mthSmallest);
    }
}
